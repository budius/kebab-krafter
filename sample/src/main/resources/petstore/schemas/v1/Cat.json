{
  "$schema": "http://json-schema.org/draft/2020-12/schema#",
  "description": "A cat",
  "type": "object",
  "required": [
    "petType",
    "id",
    "name",
    "color",
    "weight"
  ],
  "properties": {
    "petType": {
      "const": "cat"
    },
    "id": {
      "description": "UUID",
      "type": "string"
    },
    "name": {
      "description": "Name of the cat",
      "type": "string",
      "examples": [
        "Fluffy",
        "Mr. Collins",
        "Baphomet"
      ]
    },
    "color": {
      "description": "The cat fur color(s)",
      "type": "string",
      "example": [
        "brown"
      ]
    },
    "weight": {
      "description": "The cat weight in kilos",
      "type": "number"
    },
    "dateOfBirth": {
      "description": "Date of birthday (ISO 8601), or null if unknown",
      "type": "string",
      "format": "date-time",
      "example": "2020-07-02T14:23:04.000Z"
    }
  }
}
